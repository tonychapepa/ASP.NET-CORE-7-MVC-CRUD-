@{
}
@model List<UsuarioModel>
@{
    ViewData["Title"] = "Página de Usuarios";
}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Usuario" asp-action="NewUser">New User</a>
    </div>
    <h1 class="display-4">Users</h1>
    <p>User Management System</p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Login</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <body>
            @if (Model != null && Model.Any())
            {
                foreach (UsuarioModel usuario in Model)
                {
                <tr>
                    <th scope="row1">@usuario.Id</th>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.DataCadastro</td>
                    <td>
                        <div class="btn-group" role="group" arial-label="Basic Example">
                            <a role="button" class="btn btn-primary" asp-action="Editar" asp-controller="Contacto" asp-route-id="@usuario.Id">Editar</a>
                            <a role="button" class="btn btn-danger" asp-action="ApagarConfirmacao" asp-controller="Contacto" asp-route-id="@usuario.Id">Apagar</a>
                        </div>
                    </td>
                </tr>
                }
            }
        </body>
    </table>
</div>
